{%- assign collection = collections['trending-products'] -%}
<hr>
<section class="Section Section--trendingNow section">
  <header class="Section__header">
    <h3>Trending <strong>Now</strong></h3>
  </header>
  <div class="Section__content">
    <div class="Loop Loop--products">
      {% for product in collection.products limit: 10 %}
          {% comment %} {%- capture var %}
          {% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection, variable: 'transparent' %}{% endcapture %}
          {% if var == "true" %}{% else %}{% continue %}{% endif -%} {% endcomment %}
        {% render 'product-card' with product as product %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Trending",
  "class": "Section",
  "settings": [],
  "presets": [
    {
      "name": "Product Trending",
      "category": "Product"
    }
  ]
}
{% endschema %}